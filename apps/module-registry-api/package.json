{
  "name": "module-registry-api",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:nowatch": "tsx src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "package:lambda": "bun run build && rm -rf .lambda module-registry-api-lambda.zip && mkdir -p .lambda && cp package.json .lambda/package.json && cp -R dist .lambda/dist && cd .lambda && npm install --omit=dev && zip -r ../module-registry-api-lambda.zip .",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "check-types": "tsc --noEmit",
    "docker:dynamodb:up": "docker compose up -d",
    "docker:dynamodb:down": "docker compose down"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.922.0",
    "@aws-sdk/client-s3": "^3.922.0",
    "@aws-sdk/lib-dynamodb": "^3.922.0",
    "@fastify/aws-lambda": "^6.4.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/multipart": "^8.3.1",
    "dotenv": "^17.3.1",
    "fastify": "^4.29.1",
    "jszip": "^3.10.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0"
  }
}
