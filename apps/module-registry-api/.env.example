HOST=0.0.0.0
PORT=4000

AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=local
AWS_SECRET_ACCESS_KEY=local

DYNAMODB_TABLE_NAME=module_registry
DYNAMODB_ENDPOINT=http://localhost:8000
AUTO_CREATE_TABLE=true

S3_REGION=us-east-1
S3_BUCKET_NAME=module-artifacts
S3_ENDPOINT=http://localhost:9000
S3_FORCE_PATH_STYLE=true
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_PUBLIC_BASE_URL=http://localhost:9000/module-artifacts
S3_UPLOAD_PREFIX=modules
AUTO_CREATE_S3_BUCKET=true
S3_ENABLE_PUBLIC_READ_ACCESS=true
MAX_ARCHIVE_UPLOAD_SIZE_MB=20

DEFAULT_TENANT_ID=public
DEFAULT_ENVIRONMENT=local

# Comma-separated list; empty allows all origins.
ALLOWED_ORIGINS=http://localhost:3000

# Optional API key validation for all endpoints except /health.
# Leave empty to disable auth.
MODULE_REGISTRY_API_KEY=
